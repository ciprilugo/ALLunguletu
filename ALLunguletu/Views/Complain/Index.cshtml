@model IEnumerable<Lugo.EntityFramework.Complain>

@{
    ViewBag.Title = "Sesizari";
}

<h2>Sesizari</h2>

<p>
    @Html.ActionLink("Adauga sesizare", "Create")
</p>
@if(Model.Count() > 0)
{
<table>
    <tr>
        <th>Data adaugare sesizare&nbsp;&nbsp;&nbsp;</th>
        <th>Subiect sesizare&nbsp;&nbsp;&nbsp;</th>
        <th>Descriere sesizare&nbsp;&nbsp;&nbsp;</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Sterge", "Delete", new { id=item.ComplainId })
        </td>
    </tr>
}

</table>
}
