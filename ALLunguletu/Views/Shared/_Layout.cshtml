<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Asociatia de locatari Lunguletu</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Informatii asociatie", "Index", "Home")</li>
                        @if (WebSecurity.IsAuthenticated)
                        {
                            if (Roles.IsUserInRole("admin"))
                            {
                            <li>@Html.ActionLink("Contor apa ADM", "Index", "IndexAdmin")</li>
                            <li>@Html.ActionLink("Decizii administratie ADM", "Index", "DecisionAdmin")</li>
                            <li>@Html.ActionLink("Sesizari ADM", "Index", "ComplainAdmin")</li>
                            <li>@Html.ActionLink("Detalii utilizator", "Index", "Detail")</li>
                            }
                            else
                            {
                            <li>@Html.ActionLink("Contor apa", "Index", "Index")</li>
                            <li>@Html.ActionLink("Decizii administratie", "Index", "Decision")</li>
                            <li>@Html.ActionLink("Sesizari", "Index", "Complain")</li>
                            <li>@Html.ActionLink("Detalii utilizator", "Index", "Detail")</li>
                            }
                        }

                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Asociatia de proprietari Lunguletu</p>
            </div>
        </div>
    </footer>

    @* @Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)
</body>
</html>
