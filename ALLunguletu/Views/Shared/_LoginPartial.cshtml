@if (Request.IsAuthenticated) {
    <text>
        Salut, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Deconectare</a>
        }
    </text>
    
    if(Roles.IsUserInRole("admin")){
        @Html.ActionLink("Inregistrare utilizator", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    }
} else {
    <ul>
        <li>@Html.ActionLink("Conectare", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
